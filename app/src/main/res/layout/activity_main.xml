<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appstone.www.youngdrivesapp.MainActivity"
    android:background="@drawable/images1">
    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/android_material_design_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Vehicle"
        android:textColorHint="#05ab9a"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        tools:background="#800080" />
    <Button
        android:text="Pick Start Date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/android_material_design_spinner"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_datePicker"
        style="@style/Widget.AppCompat.Button"
        android:accessibilityLiveRegion="none"
        tools:background="#bc4b4b" />

    <Button
        android:text="Pick Start Time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_datePicker"
        android:layout_alignStart="@+id/btn_datePicker"
        android:layout_marginTop="24dp"
        android:id="@+id/btn_timePicker"
        tools:background="#bc4b4b" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="YOUR START DATE AND TIME"
        android:id="@+id/txt_TextDateTime"
        android:layout_below="@+id/btn_timePicker" />

    <Button
        android:text="Pick End Date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_TextDateTime"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_datePicker1"
        tools:background="#bc4b4b" />
    <Button
        android:text="Pick End Time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_datePicker1"
        android:layout_alignStart="@+id/btn_datePicker"
        android:layout_marginTop="24dp"
        android:id="@+id/btn_timePicker1"
        tools:background="#bc4b4b" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_TextDateTime1"
        android:layout_below="@+id/btn_timePicker1"/>





</RelativeLayout>
